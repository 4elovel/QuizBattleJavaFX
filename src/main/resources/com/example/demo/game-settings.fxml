<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@menus-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.GameSettingsController">
  <VBox spacing="10" style="-fx-padding: 10;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <HBox alignment="CENTER">
      <children>
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 18; -fx-font-weight: bold;" text="Question Settings" />
      </children>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
      <Button onAction="#handleAddButtonAction" styleClass="menu-button" text="Add" />
      <Button onAction="#handleDeleteButtonAction" styleClass="menu-button" text="Delete" />
      <Button mnemonicParsing="false" onAction="#handleSaveChangesButtonAction" styleClass="menu-button" text="Save changes" />
      <Button mnemonicParsing="false" onAction="#handleGoToMainMenuButtonAction" styleClass="menu-button" text="Main menu" />
    </HBox>
    <AnchorPane VBox.vgrow="ALWAYS">
      <TableView fx:id="questionsTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnResizePolicy>
          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="questionColumn" text="Question" />
          <TableColumn fx:id="answersColumn" text="Answers" />
          <TableColumn fx:id="correctAnswersColumn" text="Correct Answers" />
        </columns>
      </TableView>
    </AnchorPane>
  </VBox>
</AnchorPane>
