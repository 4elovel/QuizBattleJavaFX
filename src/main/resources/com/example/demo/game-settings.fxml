<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controllers.GameSettingsController">
  <VBox prefHeight="503.0" prefWidth="1063.0" spacing="10" style="-fx-padding: 10;">
    <HBox spacing="10">
      <Button fx:id="addButton" onAction="#handleAddButtonAction" text="Add" />
      <Button fx:id="deleteButton" onAction="#handleDeleteButtonAction" text="Delete" />
      <Button fx:id="saveChangesButton" mnemonicParsing="false" onAction="#handleSaveChangesButtonAction" text="Save Changes" />
    </HBox>
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Question Settings" />
    <TableView fx:id="questionsTable" prefHeight="400" prefWidth="600" xmlns:fx="http://javafx.com/fxml">
      <columns>
        <TableColumn fx:id="questionColumn" prefWidth="300" text="Question" />
        <TableColumn fx:id="answersColumn" prefWidth="300" text="Answers" />
        <TableColumn fx:id="correctAnswersColumn" prefWidth="200" text="Correct Answers" />
      </columns>
    </TableView>

  </VBox>
</AnchorPane>
